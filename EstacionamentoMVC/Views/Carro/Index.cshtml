@model EstacionamentoMVC.ViewModels.CarroViewModel;
@{
    ViewData["Title"] = "Carro";
}
<main class="caixinha">

<div class="container">

<form method="POST" action="/Carro/RegistrarCarro">
    <h1><strong>Bem vindo ao GICAR</strong></h1>
        <div>
            <label for="nome">Nome Completo</label>
            <br />
            <input id="nome" type="text" maxlength="20" minlength="3" name="nome" class="form-control"/>
        </div>

        <div>
            <label for="placa">Placa do Carro</label>
            <br />
            <input id="placa" type="text" maxlength="20" minlength="3" name="placa" class="form-control"/>
        </div>

        <div class="double-field">
            <div>
                <label for="marca">Marca</label>
                <select id="marca" name="marca" class="form-control">
                    <option value="" disabled selected>Selecione</option>
                    @foreach (var ma in Model.Marcas)
                    {
                        <option value="@ma.Nome">@ma.Nome</option>
                    }
                </select>
            </div>
            <div>
                <label for="modelo">Modelo</label>
                <select id="modelo" name="modelo" class="form-control">
                    <option value="" disabled selected>Selecione</option>
                    @foreach (var mo in Model.Modelos)
                    {
                        <option value="@mo.Nome">@mo.Nome</option>
                    }
                </select>
            </div>
        </div>
        <input type="submit" value="Cadastrar" class="btn btn-secondary btn-lg btn-block"/>
    </form>

</div>
</main>
